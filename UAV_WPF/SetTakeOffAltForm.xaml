<Window x:Class="UAV_WPF.SetTakeOffAltForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UAV_WPF"
        mc:Ignorable="d"
        Title="SetTakeOffAltForm" Height="350" Width="450" Background="LightBlue">
    <Grid>
        <Canvas>
            <Label Content="设置起飞高度" FontSize="30" Canvas.Left="35" Canvas.Top="82"/>
            <Border Canvas.Left="250" Canvas.Top="90" BorderThickness="2" BorderBrush="Black">
                <TextBlock Text="10"  Name="txtTakeOffAlt" Width="100" Height="40" FontSize="30" HorizontalAlignment="Center" TextAlignment="Center" />
            </Border>
            <Button  Content="确定" Name="btnOk" Width="80" Click="BtnOk_Click" Height="40" FontSize="30" Canvas.Left="64" Canvas.Top="165"/>
            <Button Content="取消" Width="80" Name="btnCancel" Click="BtnCancel_Click" Height="40" FontSize="30" Canvas.Left="195" Canvas.Top="165"/>
        </Canvas>
    </Grid>
</Window>
